{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["stepId", "runId", "stepIndex", "stage"],
  "properties": {
    "stepId": {
      "type": "string",
      "description": "Step ID"
    },
    "runId": {
      "type": "string",
      "description": "Chain run ID"
    },
    "stepIndex": {
      "type": "integer",
      "description": "Step index"
    },
    "stage": {
      "type": "string",
      "description": "Thinking stage"
    }
  }
}

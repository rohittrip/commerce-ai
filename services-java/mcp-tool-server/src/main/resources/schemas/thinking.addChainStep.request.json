{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["runId", "stepIndex", "stage", "content"],
  "properties": {
    "runId": {
      "type": "string",
      "description": "Chain run ID"
    },
    "stepIndex": {
      "type": "integer",
      "description": "Step index (0-based)"
    },
    "stage": {
      "type": "string",
      "description": "Thinking stage (analyze, breakdown, solve, verify)"
    },
    "content": {
      "type": "object",
      "description": "Step content"
    }
  }
}

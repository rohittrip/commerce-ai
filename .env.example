# Database - Java Services (JDBC format)
DATABASE_URL=jdbc:postgresql://localhost:5432/commerce_ai
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password

# Database - Node.js BFF & orchestration (PostgreSQL connection string)
NODE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/commerce_ai

# MongoDB (required for BFF mobile flow: sessions, chat, cart, address)
MONGODB_URI=mongodb://localhost:27017/commerce_ai_bff

# Redis (shared by BFF and orchestration; keys are isolated by REDIS_KEY_PREFIX)
REDIS_URL=redis://localhost:6379
# Key prefix per service so one Redis can serve both (defaults: bff / orch)
REDIS_KEY_PREFIX=bff

# JWT
JWT_SECRET=commerce-ai-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# MCP Tool Server
MCP_TOOL_SERVER_URL=http://localhost:8081

# LLM Provider API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=test
GOOGLE_API_KEY=test

# Orchestrator (BFF â†’ Orchestrator)
ORCHESTRATOR_URL=http://localhost:3001
# Set ORCHESTRATOR_GRPC_URL to use gRPC instead of HTTP (e.g. localhost:50051 when layers are separate)
# ORCHESTRATOR_GRPC_URL=localhost:50051

# Server Ports
PORT=3000
TOOL_SERVER_PORT=8081
ORCHESTRATOR_PORT=3001

# Debug Mode (set to 'true' to enable detailed error messages in chat UI)
DEBUG_MODE=false
NODE_ENV=development
